<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="{{constant('php\\Bootstrap::APP_URL')}}css/work-page.css" rel="stylesheet">
    <link href="{{constant('php\\Bootstrap::APP_URL')}}css/stylesheet.css" rel="stylesheet">
    <link rel="stylesheet" href="{{constant('php\\Bootstrap::APP_URL')}}css/responsive.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

 </head>
  <body>
  {% include 'header.html.twig' %}

  {% include 'category_menu.html.twig' %}
  <div id="work-main">
    <div id="item_list">
      {% for value in dataArr %}
        <div class="list">
         <p class="img"><img src="{{constant('php\\Bootstrap::ENTRY_URL')}}images/{{value.image}}" alt="{{value.item_name}}"></p>
         <br>
         <div class="text">
           <table class="ta1">
            <tr>
             <th>案件名</th>
             <td><a href="{{constant('php\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}">
               {{value.item_name}}</a></td>
            </tr>
            <tr>

             <th>日当</th>

             <td>&yen;{{value.price|number_format(0, '.' ,',')}}</td>
            </tr>
          </table>
            <p><a href="{{constant('php\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}" class="work-btn">詳細を見る</a></p>
        </div>
   </div>
   {% endfor %}
</div>
</div>
{% include 'footer.html.twig' %}
</body>
</html>
