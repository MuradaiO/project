<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{constant('php\\Bootstrap::APP_URL')}}js/shopping.js"></script>
    <link href="{{constant('php\\Bootstrap::APP_URL')}}css/work-page.css" rel="stylesheet">
    <link rel="stylesheet" href="{{constant('php\\Bootstrap::APP_URL')}}css/stylesheet.css">
    <link rel="stylesheet" href="{{constant('php\\Bootstrap::APP_URL')}}css/responsive.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  </head>
  <body>
  {% include 'header.html.twig' %}

    <input type="hidden" name ="entry_url" value="{{constant('php\\Bootstrap::ENTRY_URL')}}"
          id="entry_url">
    {% include 'category_menu.html.twig' %}
    <div id="work-main">

         <div class="list">
          <p class="img text-align:center;">
           <img class="text-align: center;"src="{{constant('php\\Bootstrap::ENTTRY_URL')}}images/{{itemData.image}}"
                alt="{{itemData.item_name}}"></p><br>

          <div >
            <table class="ta1">
             <tr>
              <th>案件名</th>
              <td>{{itemData.item_name}}</td>
             </tr>
             <tr>
              <th>詳細</th>
              <td>{{itemData.detail}}</td>
             </tr>
             <tr>
              <th>日当</th>
              <td>&yen;{{itemData.price|number_format(0, '.' ,',')}}</td>
             </tr>
            </table>
            <input type="hidden" name="item_id" id="item_id" value="{{itemData.item_id}}">
          </div>
          <div class="cart_in">
            <input type="button" name="back" value="一覧へ戻る" onclick="history.back(); return false">
            <input type="button"　class="fire" name="cart_in" value="この求人を保存する" id="cart_in">
          </div>
        </div>
    </div>

  </body>
</html>
