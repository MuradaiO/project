{% extends 'tasks/common/template.html.twig' %}
{% block title %}メンバーリスト{% endblock %}
{% block content %}
<div class="contact-form">
  <h2 class="section-title">メンバー一覧</h2>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>お名前</th>
        <th>メール</th>
        <th>性別</th>
        <th>登録日時</th>
        <th>編集リンク</th>
      </tr>
      {% for value in dataArr %}
      <tr>
        <td>
          <a href="{{constant('php\\Bootstrap::RECRUIT_URL')}}member_detail.php?mem_id={{value.mem_id}}">
            {{value.mem_id}}</a>
        </td>
        <td>
          <span style="font-size:60%;">
            {{value.family_name_kana}}{{value.first_name_kana}}
          </span><br>
            {{value.family_name}} {{value.first_name}}
        </td>
        <td>{{value.email}}</td>
        <td>{% if value.sex == '1' %}男性 {% elseif value.sex == '2' %}女性{% endif %}</td>
        <td>{{value.regist_date}}</td>
        <td>
          <a href="{{constant('php\\Bootstrap::RECRUIT_URL')}}member_update.php?update={{value.mem_id}}">
            編集</a>
        </td>
      </tr>
      {% endfor %}
    </table>
      <p><a href="{{constant('php\\Bootstrap::RECRUIT_URL')}}list.php">一覧へ戻る</a></p>
  </div>

{% endblock %}